<%- include partials/header -%>

<h1>Compose</h1>
<form action="/compose" method="post">

  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text"  name= "postTitle" placeholder="Enter your title">
  </div>

  <div class="form-group">
    <label >Post</label>
    <textarea class="form-control" name="postContent" rows="4" cols="50" placeholder="Enter the content"></textarea>
  </div>

  <button class="btn btn-primary" type="submit">Publish</button>
</form>

<%- include("partials/footer") -%>
